meta {
  name: Create Event - Missing Required Field
  type: http
  seq: 2
}

post {
  url: {{base_url}}/events
  body: json
  auth: none
}

body:json {
  {
    "id_owner": 1,
    "location": "San Francisco"
  }
}

assert {
  res.status: eq 400
}

tests {
  test("should return 400 for missing name field", function() {
    expect(res.status).to.equal(400);
    expect(res.body.error).to.include("name");
  });
}
