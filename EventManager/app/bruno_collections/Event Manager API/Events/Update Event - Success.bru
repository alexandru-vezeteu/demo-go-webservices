meta {
  name: Update Event - Success
  type: http
  seq: 8
}

patch {
  url: {{base_url}}/events/1
  body: json
  auth: none
}

body:json {
  {
    "seats": 600,
    "description": "Updated description"
  }
}

assert {
  res.status: eq 200
}

tests {
  test("should update event successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body.seats).to.equal(600);
    expect(res.body.description).to.equal("Updated description");
  });
}
