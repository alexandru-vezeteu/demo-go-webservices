meta {
  name: Create Ticket - Packet Success
  type: http
  seq: 2
}

post {
  url: {{base_url}}/tickets
  body: json
  auth: none
}

body:json {
  {
    "packet_id": 1
  }
}

assert {
  res.status: eq 201
}

tests {
  test("should create ticket for packet with auto-generated UUID", function() {
    expect(res.status).to.equal(201);
    expect(res.body.code).to.exist;
    expect(res.body.packet_id).to.equal(1);
    expect(res.body.event_id).to.be.null;
  });
}
