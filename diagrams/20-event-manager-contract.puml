@startuml event_manager_contract
!theme plain

title EventManager Service Contract
caption Base Path: /api/event-manager
footer Port: 12345

interface "Events API" {
    + POST /events
    + GET /events
    + GET /events/{id}
    + PATCH /events/{id}
    + DELETE /events/{id}
}

interface "Event Packets API" {
    + POST /event-packets
    + GET /event-packets
    + GET /event-packets/{id}
    + PATCH /event-packets/{id}
    + DELETE /event-packets/{id}
}

interface "Inclusions API" {
    + POST /event-packet-inclusions/event/{event_id}/packet/{packet_id}
    + GET /event-packet-inclusions/event/{event_id}
    + GET /event-packet-inclusions/packet/{packet_id}
    + PATCH /event-packet-inclusions/event/{event_id}/packet/{packet_id}
    + DELETE /event-packet-inclusions/event/{event_id}/packet/{packet_id}
}

interface "Tickets API" {
    + POST /tickets
    + GET /tickets/{code}
    + PATCH /tickets/{code}
    + PUT /tickets/{code}
    + DELETE /tickets/{code}
}

note right of "Events API"
    Manages event details:
    name, location, description, seats
end note

note right of "Event Packets API"
    Manages packet definitions:
    name, price, description
end note

note right of "Inclusions API"
    Links Events to Packets
end note

note right of "Tickets API"
    Manages ticket lifecycle
end note

@enduml
